generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Snapshot RSE par Asset
// Figé une fois calculé, jamais recalculé rétroactivement
model RseSnapshot {
  id             String   @id @default(uuid())
  assetId        String   @unique // Un seul snapshot par Asset
  co2SavedKg     Float
  waterSavedL    Float
  energySavedKwh Float
  calculatedAt   DateTime @default(now())

  @@index([assetId])
}
