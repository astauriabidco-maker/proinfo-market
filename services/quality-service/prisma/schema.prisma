generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AssetType {
  SERVER
  WORKSTATION
  LAPTOP
}

model QualityChecklist {
  id        String   @id @default(uuid())
  name      String
  assetType AssetType
  version   Int
  createdAt DateTime @default(now())
  items     QualityChecklistItem[]

  @@unique([name, assetType, version])
  @@index([assetType, version])
}

model QualityChecklistItem {
  id           String   @id @default(uuid())
  checklistId  String
  code         String
  description  String
  isBlocking   Boolean
  checklist    QualityChecklist @relation(fields: [checklistId], references: [id])

  @@unique([checklistId, code])
  @@index([checklistId])
}

model QualityResult {
  id              String   @id @default(uuid())
  assetId         String
  checklistItemId String
  result          String   // PASS | FAIL
  measuredValue   String?
  createdAt       DateTime @default(now())

  @@unique([assetId, checklistItemId])
  @@index([assetId])
}

model BatteryHealth {
  assetId       String   @id
  stateOfHealth Int
  cycles        Int
  measuredAt    DateTime @default(now())
}

// ============================================
// QUALITY ANALYTICS (Sprint 18)
// ============================================

enum QualityAlertType {
  MODEL
  SUPPLIER
  BATCH
}

model QualityMetric {
  id        String   @id @default(uuid())
  key       String   // ex: "RMA_RATE", "TIME_TO_FAILURE", "BLOCKED_RATE"
  value     Float
  scope     String   // model / supplier / batch id
  createdAt DateTime @default(now())

  @@index([key, scope])
  @@index([createdAt])
}

model QualityAlert {
  id        String           @id @default(uuid())
  type      QualityAlertType
  scope     String
  reason    String
  active    Boolean          @default(true)
  createdAt DateTime         @default(now())

  @@index([type, scope])
  @@index([active])
}
