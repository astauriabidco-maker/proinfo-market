generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LocationType {
  RECEIVING
  STORAGE
  ASSEMBLY
  SHIPPING
}

enum MovementReason {
  INTAKE
  MOVE
  RESERVE
  RELEASE
  SHIP
  RETURN
}

enum StockStatus {
  AVAILABLE
  RESERVED
  IN_TRANSIT
}

model Warehouse {
  id             String          @id @default(uuid())
  code           String          @unique
  name           String
  country        String
  active         Boolean         @default(true)
  createdAt      DateTime        @default(now())
  locations      Location[]
  stockLocations StockLocation[]

  @@index([country])
  @@index([active])
}

model Location {
  id          String       @id @default(uuid())
  warehouseId String
  code        String
  type        LocationType
  createdAt   DateTime     @default(now())
  warehouse   Warehouse    @relation(fields: [warehouseId], references: [id])

  @@unique([warehouseId, code])
  @@index([warehouseId])
}

model StockLocation {
  id          String      @id @default(uuid())
  assetId     String      @unique
  warehouseId String
  warehouse   Warehouse   @relation(fields: [warehouseId], references: [id])
  status      StockStatus @default(AVAILABLE)
  orderId     String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([warehouseId])
  @@index([status])
  @@index([orderId])
}

model InventoryMovement {
  id           String         @id @default(uuid())
  assetId      String
  fromLocation String?
  toLocation   String?
  reason       MovementReason
  createdAt    DateTime       @default(now())

  @@index([assetId])
  @@index([createdAt])
}

model InventoryReservation {
  id        String   @id @default(uuid())
  assetId   String   @unique
  orderRef  String
  createdAt DateTime @default(now())

  @@index([orderRef])
}

